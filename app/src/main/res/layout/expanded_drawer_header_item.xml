<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.vicmns.demogmaillikedrawer.lib.DrawerHeaderImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/doge" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/drawer_profile_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_default" />

        <FrameLayout
            android:id="@+id/bottom_header_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/drawer_profile_picture"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <Spinner
                android:id="@+id/drawerHeaderSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/expanded_drawer_spinner_array" />
        </FrameLayout>

    </RelativeLayout>


</FrameLayout>