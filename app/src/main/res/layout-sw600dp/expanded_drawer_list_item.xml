<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_list_item_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/expanded_navigation_drawer_item_height"
    android:background="@drawable/item_selector_bkg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/drawer_list_item_section_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/expanded_navigation_drawer_item_thumbnail_margin"
        android:layout_marginLeft="@dimen/expanded_navigation_drawer_item_thumbnail_margin"
        android:layout_marginEnd="@dimen/expanded_navigation_drawer_item_thumbnail_margin"
        android:layout_marginRight="@dimen/expanded_navigation_drawer_item_thumbnail_margin"
        android:clickable="false"
        android:src="@drawable/ic_home" />


    <TextView
        android:id="@+id/drawer_list_item_section_text"
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="HUEHUEUH" />

</LinearLayout>